---
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

const brandData = yaml.load(
  fs.readFileSync(path.resolve('./src/data/brand.yaml'), 'utf8')
) as any;

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'TOP' },
  { href: '/about', label: 'こだわり' },
  { href: '/menu', label: 'メニュー' },
  { href: '/flow', label: '施術の流れ' },
  { href: '/salon', label: '店舗情報' },
  { href: '/recruit', label: '採用情報' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header class="header">
  <div class="header-inner">
    <div class="header-left">
      <a href="/" class="logo">
        <span class="logo-text">Beauty Brow</span>
        <span class="logo-sub">眉×まつ毛パーマ専門</span>
      </a>
    </div>
    
    <nav class="header-nav">
      <ul class="nav-list">
        {navItems.map((item) => (
          <li class="nav-item">
            <a 
              href={item.href} 
              class={`nav-link ${isActive(item.href) ? 'active' : ''}`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <div class="header-right">
      <a href={brandData.social.hotpepper} target="_blank" rel="noopener" class="reserve-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        <span>予約する</span>
      </a>
      
      <button class="menu-toggle" aria-label="メニューを開く">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    transition: var(--transition-base);
  }
  
  .header-inner {
    max-width: var(--container-width, 1120px);
    margin: 0 auto;
    padding: 0 2rem;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .header-left {
    flex-shrink: 0;
  }
  
  .logo {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: var(--color-text);
  }
  
  .logo-text {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    line-height: 1.2;
  }
  
  .logo-sub {
    font-size: 0.625rem;
    color: var(--color-text-muted);
    letter-spacing: 0.1em;
    margin-top: 2px;
  }
  
  .header-nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  
  .nav-list {
    display: flex;
    gap: 2.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .nav-link {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    position: relative;
    transition: var(--transition-fast);
    padding: 0.5rem 0;
  }
  
  .nav-link:hover {
    color: var(--color-accent);
  }
  
  .nav-link.active {
    color: var(--color-accent);
  }
  
  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
  }
  
  .header-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-shrink: 0;
  }
  
  .reserve-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: white;
    border-radius: 50px;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: var(--transition-base);
  }
  
  .reserve-btn:hover {
    background: var(--color-accent-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(173, 165, 139, 0.3);
  }
  
  .menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
  }
  
  .menu-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    margin: 3px 0;
    transition: var(--transition-fast);
  }
  
  .menu-toggle:hover span {
    background: var(--color-accent);
  }
  
  /* Mobile Styles */
  @media (max-width: 768px) {
    .header-inner {
      height: 60px;
      padding: 0 1rem;
    }
    
    .logo-text {
      font-size: 1.25rem;
    }
    
    .logo-sub {
      font-size: 0.5rem;
    }
    
    .header-nav {
      display: none;
    }
    
    .reserve-btn span {
      display: none;
    }
    
    .reserve-btn {
      padding: 0.5rem;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      justify-content: center;
    }
    
    .menu-toggle {
      display: flex;
    }
  }
  
  @media (max-width: 1024px) {
    .nav-list {
      gap: 1.5rem;
    }
    
    .nav-link {
      font-size: 0.85rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.querySelector('.menu-toggle');
    const mobileNav = document.querySelector('.mobile-nav');
    
    if (menuToggle && mobileNav) {
      menuToggle.addEventListener('click', () => {
        mobileNav.classList.toggle('active');
        document.body.classList.toggle('menu-open');
      });
    }
  });
</script>