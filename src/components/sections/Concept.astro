---
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

const brandData = yaml.load(
  fs.readFileSync(path.resolve('./src/data/brand.yaml'), 'utf8')
) as any;
---

<section class="concept section">
  <div class="container">
    <div class="concept-inner">
      <div class="section-header">
        <span class="section-label">CONCEPT</span>
        <h2 class="section-title">{brandData.copy.concept.title}</h2>
        <p class="section-lead">{brandData.copy.concept.lead}</p>
      </div>
      
      <div class="concept-content">
        <p class="concept-text">
          {brandData.copy.concept.description}
        </p>
      </div>
      
      <div class="concept-features">
        {brandData.copy.features.map((feature: any) => (
          <div class="concept-feature">
            <div class="feature-icon">
              {feature.icon === 'room' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                  <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
              )}
              {feature.icon === 'time' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              )}
              {feature.icon === 'person' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              )}
            </div>
            <h3 class="feature-title">{feature.title}</h3>
            <p class="feature-description">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .concept {
    background: var(--color-base);
  }
  
  .container {
    max-width: var(--container-width, 1120px);
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .concept-inner {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: var(--color-accent);
    margin-bottom: 1rem;
  }
  
  .section-title {
    font-family: var(--font-serif);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1rem;
    line-height: 1.4;
  }
  
  .section-lead {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-text);
    line-height: 1.8;
    font-weight: 500;
  }
  
  .concept-content {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .concept-text {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .concept-features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }
  
  .concept-feature {
    text-align: center;
  }
  
  .feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--color-bg-muted);
    border-radius: 50%;
    margin-bottom: 1.5rem;
    color: var(--color-accent);
  }
  
  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }
  
  .feature-description {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }
  
  /* タブレット対応 */
  @media (max-width: 1024px) {
    .concept-features {
      gap: 2rem;
    }
  }
  
  /* モバイル対応 */
  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }
    
    .section-header {
      margin-bottom: 2rem;
    }
    
    .concept-content {
      margin-bottom: 3rem;
    }
    
    .concept-features {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .concept-feature {
      padding: 1.5rem;
      background: var(--color-bg-muted);
      border-radius: 1rem;
    }
    
    .feature-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 1rem;
      background: white;
    }
  }
</style>